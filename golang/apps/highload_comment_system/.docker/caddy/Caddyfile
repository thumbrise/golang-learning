:80 {
    root * /var/www/public
    
    # Handle PHP files
    php_fastcgi app:9000 {
        trusted_proxies private_ranges
    }
    
    # Serve static files
    file_server
    
    # Handle Laravel routes
    try_files {path} {path}/ /index.php?{query}
    
    # Security headers
    header {
        -Server
        X-Content-Type-Options nosniff
        X-Frame-Options DENY
        X-XSS-Protection "1; mode=block"
    }
    
    # Logging
    log {
        output stdout
        format console
    }
}
